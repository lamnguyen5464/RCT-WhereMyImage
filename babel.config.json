{
    "presets": ["module:metro-react-native-babel-preset"],
    "plugins": [
        [
            "module-resolver",
            {
                "root": ["./src"],
                "extensions": [".ts", ".tsx", ".js", ".json"],
                "alias": {
                    "@assets": "./src/assets",
                    "@components": "./src/components",
                    "@screens": "./src/screens",
                    "@hooks": "./src/hooks",
                    "@core": "./src/core",
                    "@navigation": "./src/navigation",
                    "@context": "./src/context",
                    "@utils": "./src/utils"
                }
            }
        ]
    ]
}
